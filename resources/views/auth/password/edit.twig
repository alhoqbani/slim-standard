{% extends 'auth/layout.twig' %}

{% block content %}
    <div class="col-sm-6 col-sm-offset-3">
        <form action="{{ path_for('password.change') }}" method="post" novalidate>
            {{ csrf_field() | raw }}
            <div class="form-group {{ errors.current_password ? 'has-error' : '' }}">
                <label for="current_password">Current Password</label>
                <input type="password" name="current_password" class="form-control" id="current_password"
                       placeholder="Current Password">
                <div class="help-block"> {{ errors.current_password | first }} </div>
            </div>
            <div class="form-group {{ errors.new_password ? 'has-error' : '' }}">
                <label for="new_password">New Password</label>
                <input type="password" name="new_password" class="form-control" id="new_password"
                       placeholder="New Password">
                <div class="help-block"> {{ errors.new_password | first }} </div>
            </div>
            <button type="submit" class="btn btn-default">Change Password</button>
        </form>
    </div>

{% endblock %}